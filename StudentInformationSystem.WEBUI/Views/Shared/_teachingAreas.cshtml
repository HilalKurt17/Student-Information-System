@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TeachingAreasDetailsViewModel
@{
    List<LessonDTO> lessons = Model.lessons;
}

<div class="form-group p-2">
    <label>Teaching Areas</label>
    <div class="div-teaching-subjects">
        <div class="m-2 t-subject-div">
            @for (int i = 0; i < Model.teacherLesson.Count(); i++)
            {
                <input type="hidden" name="TeacherLessons[@i].LessonID" value="@Model.teacherLesson[i].LessonID">
                <input type="hidden" name="TeacherLessons[@i].TeacherID" value="@Model.teacherLesson[i].TeacherID">
                int lesson_id = Model.teacherLesson[i].LessonID;

                <div class="form-check form-switch me-4">
                    <input class="form-check-input me-2" type="checkbox"
                    id="TeacherLessons_@lesson_id" name="TeacherLessons[@i].IsChecked"
                    value="@Model.teacherLesson[i].IsChecked">
                    <label class="form-check-label" for="TeacherLessons_@lesson_id">
                        @lessons[lesson_id-1].Name</label>
                </div>
                List<TeacherLesson> tll = Model.teacherLesson;
            }
        </div>
    </div>
</div>
