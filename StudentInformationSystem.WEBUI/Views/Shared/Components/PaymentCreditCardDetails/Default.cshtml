

<div class="form-group p-2">
    <label>Payment Card Details</label>
    <div class="card-div">
        <div class="form-group p-2">
            <label for="Cardholder Name">
                Cardholder Name
            </label>
            <input asp-for="CardholderName" 
            class="form-control"/>
        </div>
        <div class="form-group p-2">
            <label for="CardNumber">
                Card Number
            </label>
            <input asp-for="CardNumber" class="form-control"/>
        </div>
        <div class="creditCard-div">
            <div class="form-group p-2 me-3">
                <label for="ExpirationDate">
                    Expiration Date
                </label>
                <input asp-for="ExpirationDate" class="form-control" />
            </div>
            <div class="form-group p-2">
                <label for="SecurityCode">
                    CVV
                </label>
                <input asp-for="SecurityCode" class="form-control" />
            </div>
        </div>
    </div>
</div>
