@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<form method="post" asp-controller="Home" asp-action="ReturnToHome">
    <div class="container" style="margin-top:6% !important; border:dashed; border-style:double; border-color:maroon;">
        <div class="row" style="justify-content:center;align-content:center; display:grid !important;">
            <div class="col-12" style="justify-self:center !important;">
                <h1 >
                    Access denied for unauthorized user.
                </h1>
            </div>
        </div>


        <div class="row"  style="align-content:center; justify-content:center;">
            <div class="col-3">
                <div class="form-group p-2 d-grid mt-5">
                    <button type="submit" class="btn btn-primary btn-features" 
                    style="display:block; color:white !important; background-color:maroon !important; border-color:maroon !important;">
                        Return to Home Page
                    </button> 
                </div>
            </div>
        </div>
    </div>
</form>
