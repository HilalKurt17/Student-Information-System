
@section Navbar{
    @await Html.PartialAsync("_navbarTSA.cshtml")
}

@{
    Layout = "_Layout";
}

<form method="POST">
    <div class="row">
        <div class="col-6">
            <div class="form-group p-2">
                <label for="Name">Name</label> 
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group p-2">
                <label for="Surname">Surname</label>
                <input asp-for="Surname" class="form-control" />
            </div>
            <div class="form-group p-2">
                <label for="Mail">Mail</label>
                <input asp-for="Mail" class="form-control" />
            </div>
            <div class="form-group p-2">
                <label for="Phone">Phone</label>
                <input asp-for="Phone" class="form-control" />
            </div>
            <div class="form-group p-2 form-floating">
              <textarea class="form-control"  
              id="TeacherExplanation"
              placeholder="Leave a comment here"></textarea>
              <label for="TeacherExplanation">
                  Details
              </label>
            </div>
            
            
        </div>
        <div class="col-6">
            <div class="form-group p-2">
                <label for="ParentPhone">IBAN</label>
                <input asp-for="IBAN" class="form-control" />
            </div>
            <div class="input-group p-2 mt-4">

                <select class="form-select me-3" id="GenderSelection">
                    <option selected disabled> Gender </option>
                    <option value="F">Female</option>
                    <option value="M">Male</option>
                </select>
                <select class="form-select" id="EducationLevel">
                    <option selected disabled> Education Level </option>
                    <option value="S">Undergraduate Tutor</option>
                    <option value="BSc">B.Sc Tutor</option>
                    <option value="MSc">M.Sc Tutor</option>
                    <option value="PhD">PhD Tutor</option>
                </select>

            </div>
            <div class="form-group p-2 mt-4 d-grid">
                <button type="submit" class="btn btn-primary btn-features">
                Add New Teacher </button>
            </div>
            
                
        </div>
        <div class="col-6">
            <div class="form-group p-2">
                <label>Teaching Areas</label>
                <div class="div-teaching-subjects">
                    <div class="me-4">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox"
                        id="lesson1">
                        <label class="form-check-label" for="lesson1">
                            Mathematics</label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox"
                        id="lesson2" />
                        <label class="form-check-label" for="lesson2">
                            Turkish
                        </label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox"
                        id="lesson3" />
                        <label class="form-check-label" for="lesson3">
                            Chemistry
                        </label>
                        
                    </div>
                    </div>
                    <br />
                    <br />
                    <div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox"
                        id ="lesson4" />
                        <label class="form-check-label" for="lesson4">
                            Biology
                        </label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox"
                        id = "lesson5" />
                        <label class="form-check-label" for="lesson5">
                            Physics
                        </label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox"
                        id = "lesson6" />
                        <label class="form-check-label" for="lesson6">
                            History
                        </label>
                   </div>
                   </div>
                </div>
            </div>
        </div>
    </div>
</form>


