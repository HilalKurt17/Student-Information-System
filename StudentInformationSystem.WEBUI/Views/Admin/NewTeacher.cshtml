@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@section Navbar{
    @await Html.PartialAsync("_navbarTSA.cshtml")
}

@{
    Layout = "_Layout";
}
@model TeacherDetailsViewModel
@*since input type = file data is taken from user, enctype is added additional to other 
    informations 
*@
<form method="POST" asp-controller="Admin" asp-action="NewTeacher" enctype="multipart/form-data">
    <div class="container-in-add">
    <div class="row">
        <div class="student-registration-div mb-4 mt-5" style="align-content:center; justify-content:center;">
            <img class="me-4" src="~/images/_SIS.png" width=60px; />
            <h1><b>
                Teacher Registration Page
            </b></h1>
        </div>
    </div>
    <div class="row" style="align-content:center; justify-content:center;">
        <div class="col-6">
            <div class="form-group p-2">
                <label for="Name">Name</label> 
                <input asp-for="@Model.teacher.Name" class="form-control" required/>
            </div>
            <div class="form-group p-2">
                <label for="Surname">Surname</label>
                <input asp-for="@Model.teacher.Surname" class="form-control" required/>
            </div>
            <div class="input-group p-2 mt-4">

                <select class="form-select me-3" id="GenderSelection" 
                asp-for="@Model.teacher.Gender" required>
                    <option selected disabled> Gender </option>
                    <option value="F">Female</option>
                    <option value="M">Male</option>
                </select>
                <select class="form-select" id="EducationLevel" 
                asp-for="@Model.teacher.EducationLevel" required>
                    <option selected disabled> Education Level </option>
                    <option value="Undergraduate Student">Undergraduate Tutor</option>
                    <option value="B.Sc">B.Sc Tutor</option>
                    <option value="M.Sc">M.Sc Tutor</option>
                    <option value="PhD">PhD Tutor</option>
                </select>

            </div>
    
       
            <div class="form-group p-2">
                <label for="Mail">Mail</label>
                <input asp-for="@Model.teacher.Mail" class="form-control" required/>
            </div>
            <div class="form-group p-2">
                <label for="Phone">Phone</label>
                <input id="Phone" asp-for="@Model.teacher.Phone" class="form-control" required/>
            </div>
            <div class="form-group p-2 form-floating pt-4">
              <textarea class="form-control"  style="height:123px;"
              id="TeacherExplanation"
              placeholder="Leave a comment here" asp-for="@Model.teacher.Details"></textarea>
              <label class="p-3 pt-4" for="TeacherExplanation">
                  Details
              </label>
            </div>
            <div class="form-group p-2 d-grid mt-5 mb-5">
                <button type="submit" class="btn btn-primary btn-features" 
                style="display:block;">
                    Add New Teacher
                </button> 
            </div>
        </div>
        
    </div>
    </div>
</form>


