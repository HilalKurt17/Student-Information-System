@{
    Layout = "_Layout";
}

@section Navbar{
    @await Html.PartialAsync("_navbarTSA.cshtml")
}

<form method="POST">
    <div class="row">
        <div class="col-6">
            <div class="form-group p-2">
                <label for="Name">Name</label> 
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group p-2">
                <label for="Surname">Surname</label>
                <input asp-for="Surname" class="form-control" />
            </div>
            <div class="form-group p-2">
                <label for="Mail">Mail</label>
                <input asp-for="Mail" class="form-control" />
            </div>
            <div class="form-group p-2">
                <label for="Phone">Phone</label>
                <input asp-for="Phone" class="form-control" />
            </div>
            
        </div>
        <div class="col-6">
            <div class="form-group p-2">
                <label for="ParentPhone">Parent Phone</label>
                <input asp-for="ParentPhone" class="form-control" />
            </div>
            <div class="input-group p-2 mt-4">

                <select class="form-select me-3" id="GenderSelection">
                    <option selected disabled> Gender </option>
                    <option value="F">Female</option>
                    <option value="M">Male</option>
                </select>
                <select class="form-select" id="EducationLevel">
                    <option selected disabled> Education Level </option>
                    <option value="PS">Primary School</option>
                    <option value="MS">Middle School</option>
                    <option value="HS">High School</option>
                </select>

            </div>
            <div class="form-group p-2 mt-4 d-grid">
                <button type="submit" class="btn btn-primary btn-features">
                Add New Student </button>
            </div>
            
                
        </div>
        
    </div>
                
</form>
